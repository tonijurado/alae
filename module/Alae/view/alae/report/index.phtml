<script>
    function reports(url, isAnalyte, isBatch)
    {
        var isRedirect = true;

        if($("#study").val() !== "-1")
        {
            url = url + "?id=" + $("#study").val();
            if (isAnalyte && $("#analyte").val() !== null)
            {
                url = url + "&an=" + $("#analyte").val();

                if(isBatch && $("#batch").val() > 0)
                {
                    url = url + "&ba=" + $("#batch").val();
                }
                else if(!isBatch)
                {
                    isRedirect = true;
                }
                else
                {
                    alert("Debe seleccionar un lote");
                    isRedirect = false;
                }
            }
            else if(!isAnalyte)
            {
                isRedirect = true;
            }
            else
            {
                alert("Debe seleccionar un Analito");
                isRedirect = false;
            }

            if(isRedirect)
            {
                window.location = url;
            }
        }
        else
        {
            alert("Debe seleccionar un Estudio");
        }
    }

    $('#study').on('change', function() {
	var optionSelected = $("option:selected", this);
	var id = this.value;
        if(id > 0)
        {
            $.ajax
            ({
                type: "GET",
                dataType: "json",
                url: basePath + "/report/ajxstudy",
                data: {id: id},
                success: function(data)
                {
                    $('#analyte').html(data.data);
                    $('#ajax1').show();
                    $('#analyte').show();
                    $('#ajax2').hide();
                    $('#batch').hide();
                }
            });
        }
        else
        {
            $('#ajax1').hide();
            $('#analyte').hide();
            $('#ajax2').hide();
            $('#batch').hide();
        }
    });

    $('#analyte').on('change', function() {
	var optionSelected = $("option:selected", this);
	var an = this.value;
        if(an > 0)
        {
            $.ajax
            ({
                type: "GET",
                dataType: "json",
                url: basePath + "/report/ajxbatch",
                data: {id: $('#study').val(), an: an},
                success: function(data)
                {
                    $('#batch').html(data.data);
                    $('#ajax2').show();
                    $('#batch').show();
                }
            });
        }
        else
        {
            $('#ajax2').hide();
            $('#batch').hide();
        }
    });
</script>
